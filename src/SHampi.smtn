
module SHampi where

import Debug.Trace

import Data.List
import SChar
import RegEx
import Match

-- substring src offset length
substring :: [a] -> Integer -> Integer -> [a]
substring s o l = take l $ drop o s

contains :: (SChar c) => [c] -> String -> Bool
contains v s = isInfixOf (toSCharString s) v

assertIn :: (SChar c) => Map (RID, Integer) RegEx -> [c] -> Bool -> RegEx -> Bool
assertIn regs vstr b reg =
 let p = match regs reg vstr
 in if b then p else not p

